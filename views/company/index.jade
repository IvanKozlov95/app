extends ../layout

block content
	#home
	.container
		.col-xs-12
			div(id='' + company.id).profile
				form(role='form')
					.row
						.col-xs-1
							h2.form-heaing= company.name
						.col-xs-2.col-xs-offset-1
							h3
								a(href='/request/list/?id='+company._id)
									span.label.label-info= 'Просмотр новых заявок'
						.col-xs-2.col-xs-offset-1
							h3
								a(href='/request/bydate/?company='+company._id+'&date='+new Date().getFullYear()+'-'+("0" + (new Date().getMonth() + 1)).slice(-2)+'-'+("0" + (new Date().getDate())).slice(-2))
									span.label.label-info= 'Заявки на сегодня'
					.form
						input(type='hidden' value=company._id name='id')
						each value, field in company
							if (field[0] == '_') 
								- continue;
							.row
								.form-group
									.col-xs-1
										label= field
									.col-xs-4.col-xs-offset-1
										input(type='text' name=field placeholder='Ваш ' + field value=value).form-control
						.row
							.form-group
								.col-xs-1
									label Описание
								.col-xs-6.col-xs-offset-1
									textarea(name='description' cols=100 rows=10).form-control= company._description
					.row
						.form-group
							.col-xs-1
								label Avatar
							.col-xs-2.col-xs-offset-1
								input(type='file' name='avatar')
					input(type='submit' value='Save').btn.btn-md.btn-primary

				div(class='avatar')
					img(src='\\avatars\\'+company._avatar alt='avatar' width='200' height='200').img-circle

