extends ../layout

block content
	h4 Заявка
	h4#status Статус  
		small= request.status
	h4 From  
		a(href='/client/profile/?id='+request.client._id)
			small= request.client.name
	//- h4 Company   
	//- 	a(href='/company/profile/?id='+reservation.company._id)
	//- 		small= request.company.name
	h3 Информация
	ul
		li
			h4 Дата:   
				small= request.date.getDate()+'/'+request.date.getMonth()+'/'+request.date.getFullYear()
		li
			h4 Время:   
				small= request.time
		if request.message
			li
				h4 Сообщение   
					small= request.message