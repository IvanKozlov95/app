extends ../layout

block head
	link(href='/css/signin.css' rel='stylesheet')
	script(src='/bootstrap-validator/dist/validator.js')
	script(src='/js/registration.js')

block content
	#home.container
	if user == 'client'
		.row.text-center
			.col-md-12
				form#client-form(role='form').form-signin
					h2.form-signin-heading Регистрация
					.form-group.has-feedback
						label(for='username').sr-only Username
						input(type='text' name='login' placeholder='login' required='' data-error='Пожалуйста, заполните это поле').form-control
						.help-block.with-errors
					.form-group
						label(for='password').sr-only Password
						input(type='password' name='password' placeholder='password' required='' data-error='Пожалуйста, заполните это поле').form-control
						.help-block.with-errors
					.form-group
						label(for='friendlyName').sr-only Name
						input(type='text' name='name' placeholder='name' data-error='Как мне Вас называть?').form-control
						.help-block.with-errors
					.form-group
						label(for='phone').sr-only Phone
						input(type='tel' name='phone' placeholder='7 915 812 56 69' pattern='^[1-9] [(][0-9]{3}[)] [0-9]{3}-[0-9]{2}-[0-9]{2}$').form-control
					.form-group
						label(for='email').sr-only Email
						input(type='email' name='email' placeholder='asd@asd.asd').form-control
					input(name='_t' hidden='' value='client')
					.form-group
						button.btn-submit.btn.btn-primary.btn-block(type='button') Зарегистрироваться
	if user == 'company'
		.row
			.col-md-12
				form#company-form(role='form').form-signin
					h2.form-signin-heading Регистрация
					.form-group.has-feedback
						label(for='username').sr-only Username
						input(type='text' name='login' placeholder='login' required='' data-error='Пожалуйста, заполните это поле').form-control
						.help-block.with-errors
					.form-group
						label(for='password').sr-only Password
						input(type='password' name='password' placeholder='password' required='' data-error='Пожалуйста, заполните это поле').form-control
						.help-block.with-errors
					.form-group
						label(for='name').sr-only Name
						input(type='text' name='name' placeholder='name' data-error='Как мне Вас называть' required='').form-control
						.help-block.with-errors
					.form-group
						label(for='address').sr-only Address
						input(type='text' name='address' placeholder='address' data-error='Пожалуйста, заполните это поле').form-control
						.help-block.with-errors.form-group
					.form-group
						label(for='desc').sr-only Desc
						textarea(name='desc' placeholder='Опишите вашу компанию' row=10 cols=40).form-control
					.form-group
						label(for='logo').sr-only Logo
						input(type='file' name='logo' accept='image/*').form-control
						.help-block.with-errors.form-group
					input(name='_t' hidden='' value='company')
					.form-group
						button.btn-submit.btn.btn-primary.btn-block(type='button') Зарегистрироваться
